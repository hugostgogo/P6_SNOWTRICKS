{% extends 'base.html.twig' %}

{% block title %}
	{{ trick.name }}
	- SNOWTRICKS
{% endblock %}

{% block body %}
	<div class="trickSinglePage">
		<div {{ stimulus_controller('trick') }} class="trickSingle">
			<div class="cover" style="background-image: url('{{ asset(trick.cover) }}');">
				<button class="btn backBtn" {{ stimulus_action('app', 'changeRoute', 'click') }} data-app-route-param="{{ path('app_tricks_index') }}">
					<span class="material-icons">chevron_left</span>
				</button>
				<h1 class="trickName">{{ trick.name }}</h1>
				<div class="actions">
					<a href="{{ path('app_tricks_edit', {'id': trick.id}) }}">
						<button class="editButton">
							<span class="material-icons">edit</span>
						</button>
					</a>
					{% include 'tricks/_delete_form.html.twig' %}
				</div>
			</div>
			<div class="content">
				{{ trick.description }}
				{{ trick.createdAt ? trick.createdAt|date('Y-m-d H:i:s') : '' }}

				{% include "tricks/photos/wrapper.html.twig" %}
				{% include "tricks/categories/wrapper.html.twig" %}


				{% include "tricks/comments/form.html.twig" %}
				{% include "tricks/comments/wrapper.html.twig" %}
			</div>

		</div>
	</div>
{% endblock %}
